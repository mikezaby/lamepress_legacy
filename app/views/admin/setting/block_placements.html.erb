<% if @setting.present? %>
  <%= render partial: "alers", locals: { record: @setting } %>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-6">
      <div class="panel">
        <%= form_for [:admin,Setting.new], html: { role: 'form' }  do |f| %>
          <div class="form-group">
            <%= f.label :meta_value, "Block Placement" %>
            <%= f.text_field :meta_value, class: "form-control" %>
            <%= f.hidden_field :meta_key, value: "block_placement" %>
          </div>
          <div class="submit_link">
            <%= f.button "Create Block Placement", type: :submit, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          Block Manager
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Placement</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @settings.each do |setting| %>
                  <tr>
                    <td><%= setting.id %></td>
                    <td><%= setting.meta_value %></td>
                    <td>
                      <%= link_to [:admin,setting], data: { confirm: 'Are you sure?' }, method: :delete do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
  </div>
</div>
