<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        User List
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Email</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @user.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to "roles", roles_admin_user_path(user) %></td>
                  <td>
                    <%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_admin_user_path(user) %>
                  </td>
                  <td>
                    <%= link_to "<i class='fa fa-trash'></i>".html_safe, [:admin,user],
                          data: { confirm: 'Are you sure?' }, method: :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
