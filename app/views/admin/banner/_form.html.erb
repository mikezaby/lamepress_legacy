<div class="panel-body">
  <div class="row">
    <div class="col-lg-12">
      <%= render partial: '/admin/partials/alerts', locals: { record: @banner } %>

      <%= form_for [:admin,@banner], html: { multipart: true, role: 'form' } do |f| %>
          <div class="form-group">
            <%= f.label :describe %>
            <%= f.text_field :describe, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :block_id %>
            <%= f.select :block_id, @banner_blocks, { prompt: "Select Block" }, class: 'form-control'  %>
          </div>

          <div class="form-group">
            <%= f.label :url %>
            <%= f.text_field :url, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :photo %>
            <%= f.file_field :photo %>
          </div>

          <div class="form-group">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
