<div class="row">
  <div class="col-lg-12">
    <%= search_form_for [:admin, @q], url: search_admin_issues_path, html: { role: 'form' } do |f| %>
      <div class="form-group col-lg-3">
        <%= f.text_field :number_gteq, placeholder: "from issue", class: "form-control" %>
      </div>
      <div class="form-group col-lg-3">
        <%= f.text_field :number_lteq, placeholder: "to issue", class: "form-control" %>
      </div>
      <div class="form-group col-lg-3">
        <%= f.select :published_eq, [["public", true], ["hidden", false]], {}, class: "form-control" %>
      </div>
      <div class="form-group col-lg-3">
        <%= f.submit nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
