<% javascript '/djs/dynamic_dates_pub' %>

<div class="row">
  <div class="col-lg-12">
    <%= form_tag priority_admin_orderings_path, method: :get, role: 'html' do %>
      <div class="row">
        <div class="col-lg-3">
          <div class="form-group">
            <%= label_tag :year %>
            <%= select_tag :year, options_for_select(@years), class: "form-control" %>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="form-group">
            <%= label_tag :month %>
            <%= select_tag :month, options_for_select("01".."12"), class: "form-control" %>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="form-group">
            <%= label_tag :issue_id, 'Issue' %>
            <%= select_tag :issue_id, {}, class: "form-control", id: "article_issue_id" %>
          </div>
        </div>

        <div class="form-group col-lg-3">
          <%= label_tag "Category" %>
          <%= select_tag :category_id,
            options_for_select(Category.issued.pluck(:name, :id),
                               selected: params[:category_id]),
            prompt: "", class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-lg-4">
          <%= submit_tag 'submit', class: 'btn btn-primary' %>
        </div>
      </div>
  <% end %>
  </div>
</div>
