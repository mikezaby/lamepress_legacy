<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Page Manager
      </div>

      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Name</th>
                <th>Published</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pages.each do |page| %>
                <tr>
                  <td><%= page.id %></td>
                  <td><%= page.title %></td>
                  <td><%= page.name %></td>
                  <td><%= page.published  %></td>
                  <td>
                    <%= link_to "<i class='fa fa-eye'></i>".html_safe, admin_page_path(page), target: "blank" %>
                  </td>
                  <td>
                    <%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_admin_page_path(page) %>
                  </td>
                  <td>
                    <%= link_to "<i class='fa fa-trash'></i>".html_safe, [:admin,page],
                          data: { confirm: 'Are you sure?' }, method: :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
